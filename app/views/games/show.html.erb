<div class="mx-auto" data-controller="timer typing"
                     data-typing-methods-value="<%= @ruby_methods.to_json(only: [:id, :name]) %>"
                     data-typing-current-index-value="0">
  <div class="mb-4 text-xl">
    <span id="timer" data-timer-target="display" class="font-bold text-2xl"><%= @game.remaining_time %></span>秒
  </div>

  <div class="mb-4">
    <div data-typing-target="method" class="font-bold text-2xl"></div>
  </div>

  <div>
    <input data-timer-target="input" data-typing-target="input" type="text" placeholder="ここにタイピング" class="border">
  </div>
</div>
