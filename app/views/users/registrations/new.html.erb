<div class="max-w-md mx-auto p-6 bg-white rounded-lg shadow-md">
  <h2 class="text-2xl font-bold mb-6 text-center"><%= t('.sign_up') %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="mb-6">
      <%= f.label :email, class: "block mb-2 font-medium text-gray-700" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full border border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-500" %>
    </div>

    <div class="mb-6">
      <%= f.label :password, class: "block mb-2 font-medium text-gray-700" %>
      <% if @minimum_password_length %>
        <span class="text-sm text-gray-500"><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></span>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "w-full border border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-500" %>
    </div>

    <div class="mb-6">
      <%= f.label :password_confirmation, class: "block mb-2 font-medium text-gray-700" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full border border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-500" %>
    </div>

    <div class="mb-6">
      <%= f.submit t('.sign_up'), class: "w-full bg-red-500 text-white py-2 px-4 rounded-md hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500" %>
    </div>
  <% end %>

  <div class="text-center">
    <%= render "users/shared/links" %>
  </div>
</div>
