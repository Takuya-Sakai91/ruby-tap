<div class="max-w-md mx-auto p-6 bg-white rounded-lg shadow-md mt-20">
  <h1 class="text-2xl font-bold text-center mb-6 text-red-700">タイピング結果</h1>

  <div class="mb-4 text-center">
    <h2 class="font-medium text-gray-700">正解数</h2>
    <p data-typing-target="correctCount" class="text-2xl font-bold text-red-600"><%= @game.correct_count %></p>
  </div>

  <div class="mb-6 text-center">
    <h2 class="font-medium text-gray-700">ミス数</h2>
    <p data-typing-target="wrongCount" class="text-2xl font-bold text-red-600"><%= @game.wrong_count %></p>
  </div>

  <div class="flex flex-wrap justify-center gap-3 mt-8">
    <%= link_to 'もう一度プレイ', new_game_path, class: 'px-4 py-2 bg-red-600 text-white rounded-md hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 whitespace-nowrap' %>
    <%= link_to '出題メソッド', methods_game_path(@game), class: 'px-4 py-2 bg-red-400 text-white rounded-md hover:bg-red-500 focus:outline-none focus:ring-2 focus:ring-blue-400 whitespace-nowrap' %>
    <%= link_to 'トップへ戻る', root_path, class: 'px-4 py-2 bg-gray-500 text-white rounded-md hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-gray-500 whitespace-nowrap' %>
  </div>
</div>
