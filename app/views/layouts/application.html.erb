<!DOCTYPE html>
<html>
  <head>
    <title>RubyTap</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>

    <%= stylesheet_link_tag "application" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <div class="container mx-auto mt-28 px-5">
      <% if notice %>
        <div class="mb-4 p-3 bg-green-100 text-green-700 rounded-md max-w-md mx-auto">
          <%= notice %>
        </div>
      <% end %>
      <% if alert %>
        <div class="mb-4 p-3 bg-red-100 text-red-700 rounded-md max-w-md mx-auto">
          <%= alert %>
        </div>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
