<% content_for :page_title do %>
  メソッド詳細
<% end %>

<div class="mb-6">
  <div class="flex items-center mb-4">
    <%= link_to admin_ruby_methods_path, class: "text-gray-600 hover:text-gray-900 mr-2" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
    <% end %>
    <h1 class="text-2xl font-semibold text-gray-800">メソッド詳細</h1>
  </div>
</div>

<div class="bg-white rounded-lg shadow-md overflow-hidden">
  <div class="bg-gray-50 px-6 py-4 border-b border-gray-200">
    <div class="flex justify-between items-center">
      <h2 class="text-xl font-bold text-red-600"><%= @ruby_method.name %></h2>
    </div>
  </div>

  <div class="p-6">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <div class="mb-6">
          <h3 class="text-sm font-medium text-gray-500 mb-1">メソッド名</h3>
          <p class="text-lg font-semibold text-gray-800"><%= @ruby_method.name %></p>
        </div>

        <div class="mb-6">
          <h3 class="text-sm font-medium text-gray-500 mb-1">クラス名</h3>
          <p class="text-lg font-semibold text-gray-800"><%= @ruby_method.class_name %></p>
        </div>

        <div class="mb-6">
          <h3 class="text-sm font-medium text-gray-500 mb-1">モジュール</h3>
          <% if @ruby_method.ruby_module %>
            <p class="text-lg font-semibold text-gray-800">
              <%= link_to @ruby_method.ruby_module.name, admin_ruby_module_path(@ruby_method.ruby_module), class: "text-red-600 hover:text-red-800" %>
            </p>
          <% else %>
            <p class="text-gray-500 italic">モジュールなし</p>
          <% end %>
        </div>
      </div>

      <div>
        <div class="mb-6">
          <h3 class="text-sm font-medium text-gray-500 mb-1">説明</h3>
          <% if @ruby_method.description.present? %>
            <div class="p-4 bg-gray-50 rounded-md">
              <p class="text-gray-800"><%= @ruby_method.description %></p>
            </div>
          <% else %>
            <p class="text-gray-500 italic">説明なし</p>
          <% end %>
        </div>
      </div>
    </div>

    <div class="mt-8 pt-6 border-t border-gray-200 flex justify-between items-center">
      <div class="flex space-x-3">
        <%= link_to admin_ruby_methods_path, class: "px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2" do %>
          <div class="flex items-center">
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
            一覧に戻る
          </div>
        <% end %>

        <%= link_to edit_admin_ruby_method_path(@ruby_method), class: "px-4 py-2 bg-blue-600 border border-transparent rounded-md shadow-sm text-sm font-medium text-white hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
          <div class="flex items-center">
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
            </svg>
            編集する
          </div>
        <% end %>
      </div>

      <div>
        <%= button_to admin_ruby_method_path(@ruby_method), method: :delete, data: { "turbo-confirm": "「#{@ruby_method.name}」メソッドを本当に削除しますか？この操作は取り消せません。" }, class: "px-4 py-2 bg-red-600 border border-transparent rounded-md shadow-sm text-sm font-medium text-white hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 inline-flex items-center", form: { style: "display: inline;" } do %>
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
          </svg>
          削除する
        <% end %>
      </div>
    </div>
  </div>
</div>
