<div class="max-w-md mx-auto p-6 bg-white rounded-lg shadow-md mt-20" data-controller="timer typing"
                     data-typing-methods-value="<%= @ruby_methods.to_json(only: [:id, :name]) %>"
                     data-typing-current-index-value="0"
                     data-typing-game-id-value="<%= @game.id %>">
  <div class="mb-4 text-xl text-center">
    <span id="timer" data-timer-target="display" class="font-bold text-2xl text-red-600"><%= @game.remaining_time %></span>秒
  </div>

  <div class="mb-4 text-center">
    <div data-typing-target="method" class="font-bold text-2xl text-red-700"></div>
  </div>

  <div class="text-center">
    <input data-timer-target="input" data-typing-target="input" type="text" placeholder="ここにタイピング" class="w-full border border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-500">
  </div>

  <%= form_with model: @game, url: finish_game_path(@game), method: :post, class: 'hidden', data: { typing_target: 'finishForm' } do |f| %>
    <%= f.hidden_field :correct_count %>
    <%= f.hidden_field :wrong_count %>
  <% end %>
</div>
