<% content_for :page_title do %>
  モジュール編集
<% end %>

<div class="mb-6">
  <div class="flex items-center mb-4">
    <%= link_to admin_ruby_module_path(@ruby_module), class: "text-gray-600 hover:text-gray-900 mr-2" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
    <% end %>
    <h1 class="text-2xl font-semibold text-gray-800"><%= @ruby_module.name %>モジュールを編集</h1>
  </div>

  <p class="text-gray-600 mb-6">モジュール情報を編集できます。</p>
</div>

<div class="bg-white rounded-lg shadow-md p-6">
  <%= form_with(model: [:admin, @ruby_module], local: true, class: "space-y-6") do |f| %>
    <% if @ruby_module.errors.any? %>
      <div class="bg-red-50 border-l-4 border-red-500 p-4 mb-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-red-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-red-700">
              <%= pluralize(@ruby_module.errors.count, "error") %> prohibited this module from being saved:
            </h3>
            <div class="mt-2 text-sm text-red-700">
              <ul class="list-disc pl-5">
                <% @ruby_module.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <div class="grid grid-cols-1 gap-6">
      <div>
        <div class="mb-6">
          <%= f.label :name, "モジュール名", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :name, placeholder: "例: Enumerable", class: "w-full rounded-md border border-gray-300 shadow-sm px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent" %>
          <p class="mt-1 text-xs text-gray-500">Rubyのモジュール名を入力してください（例: Enumerable, Comparable）</p>
        </div>

        <div class="mb-6">
          <%= f.label :description, "説明", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_area :description, rows: 6, placeholder: "このモジュールの役割や機能について説明してください", class: "w-full rounded-md border border-gray-300 shadow-sm px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent" %>
          <p class="mt-1 text-xs text-gray-500">モジュールの概要と提供する機能について説明してください</p>
        </div>
      </div>
    </div>

    <div class="pt-4 border-t border-gray-200 flex justify-end space-x-3">
      <%= link_to "キャンセル", admin_ruby_module_path(@ruby_module), class: "px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2" %>
      <%= f.submit "変更を保存", class: "px-4 py-2 bg-red-600 border border-transparent rounded-md shadow-sm text-sm font-medium text-white hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
    </div>
  <% end %>
</div>
