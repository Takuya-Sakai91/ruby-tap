<div class="max-w-2xl mx-auto bg-white p-6 rounded-lg shadow-md">
  <h1 class="text-2xl font-bold mb-6"><%= t('.title', resource: devise_i18n_fix_model_name_case(resource.model_name.human, i18n_key: 'registrations.edit.title')) %></h1>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="mb-6">
      <%= f.label :username, "ユーザー名", class: "block mb-2 font-medium text-gray-700" %><br />
      <%= f.text_field :username, autofocus: true, class: "w-full border border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-500" %>
      <p class="mt-1 text-sm text-gray-500">※英数字とアンダースコアのみ使用可能（3〜20文字）</p>
    </div>

    <div class="mb-6">
      <%= f.label :email, class: "block mb-2 font-medium text-gray-700" %><br />
      <%= f.email_field :email, autocomplete: "email", class: "w-full border border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-500" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div class="mb-6 p-4 bg-yellow-100 text-yellow-800 rounded-md">
        <%= t('.currently_waiting_confirmation_for_email', email: resource.unconfirmed_email) %>
      </div>
    <% end %>

    <div class="mb-6">
      <%= f.label :password, class: "block mb-2 font-medium text-gray-700" %>
      <span class="text-sm text-gray-500"><%= t('.leave_blank_if_you_don_t_want_to_change_it') %></span><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "w-full border border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-500" %>
      <% if @minimum_password_length %>
        <span class="text-sm text-gray-500"><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></span>
      <% end %>
    </div>

    <div class="mb-6">
      <%= f.label :password_confirmation, class: "block mb-2 font-medium text-gray-700" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full border border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-500" %>
    </div>

    <div class="mb-6">
      <%= f.label :current_password, class: "block mb-2 font-medium text-gray-700" %>
      <span class="text-sm text-gray-500"><%= t('.we_need_your_current_password_to_confirm_your_changes') %></span><br />
      <%= f.password_field :current_password, autocomplete: "current-password", class: "w-full border border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-500" %>
    </div>

    <div class="mb-6">
      <%= f.submit t('.update'), class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  <% end %>

  <hr class="my-8 border-gray-200">

  <div class="mb-6">
    <h3 class="text-xl font-semibold mb-2"><%= t('.cancel_my_account') %></h3>
    <p class="mb-4">アカウントを削除する場合は、以下のボタンをクリックしてください。</p>
    <%= button_to t('.cancel_my_account'), registration_path(resource_name), data: { confirm: t('.are_you_sure'), turbo_confirm: t('.are_you_sure') }, method: :delete, class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
  </div>

  <div class="mt-6">
    <%= link_to t('devise.shared.links.back'), :back, class: "text-gray-600 hover:text-gray-900" %>
  </div>
</div>
