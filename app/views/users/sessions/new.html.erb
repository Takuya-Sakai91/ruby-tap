<div class="max-w-md mx-auto p-6 bg-white rounded-lg shadow-md">
  <h2 class="text-2xl font-bold mb-6 text-center text-gray-800"><%= t('.sign_in') %></h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="mb-4">
      <%= f.label :email, class: "block mb-2 text-sm font-medium text-gray-700" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-red-500" %>
    </div>

    <div class="mb-2">
      <%= f.label :password, class: "block mb-2 text-sm font-medium text-gray-700" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-red-500" %>
    </div>

    <%- if devise_mapping.recoverable? %>
      <div class="mb-6 text-right">
        <%= link_to t('users.shared.links.forgot_your_password'), new_password_path(resource_name), class: "text-red-600 hover:text-red-800 text-sm" %>
      </div>
    <% end %>

    <div class="mb-6">
      <%= f.submit t('.sign_in'), class: "w-full bg-red-500 text-white py-3 px-4 rounded-md hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-red-500 font-medium" %>
    </div>
  <% end %>

  <div class="text-center">
    <%- if devise_mapping.registerable? %>
      <span class="text-gray-600 text-sm"><%= t('.no_account') %></span>
      <%= link_to t('users.shared.links.sign_up'), new_registration_path(resource_name), class: "text-red-600 hover:text-red-800 font-medium text-sm ml-1" %>
    <% end %>
  </div>
</div>
